<%= form_for post, html: { multipart: true } do |form| %>
  <%= form.label :image %>
  <br>
  <%= form.file_field :image %>
  <br>
  <%= form.label :description %>
  <br>
  <%= form.text_area :description %>
  <br>
  <%= form.submit ( form.object.new_record? ? "Create Post" : "Update Post"), class: "btn" %>
<% end %>
